#!/bin/bash

pkgroot=$(dirname $0)"/../"

if [ -d $pkgroot/extlib ]; then
    cd $pkgroot
    current=$(pwd)
    export PATH=$current/extlib/bin:$PATH
    export PERL5OPT=-Iextlib/lib/perl5
    exec extlib/bin/carton exec -- bin/fluent-agent-lite.pl "$@"
else
    exec ./fluent-agent-lite.pl "$@"
fi
