#!/bin/bash

pkgroot=$(dirname $0)"/../"

if [ -d $pkgroot/extlib ]; then
    # fluent-agent-lite installed by bin/install.sh
    cd $pkgroot
    current=$(pwd)
    export PATH=$current/extlib/bin:$PATH
    export PERL5OPT=-Iextlib/lib/perl5
    exec extlib/bin/carton exec -- perl -Iextlib/lib/perl5 bin/fluent-agent-lite.pl "$@"
else
    # fluent-agent-lite installed from CPAN
    exec fluent-agent-lite.pl "$@"
fi
